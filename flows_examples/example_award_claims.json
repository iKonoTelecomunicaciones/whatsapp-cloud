{
    "version": "6.3",
    "screens": [
        {
            "id": "AWARD_CLAIM",
            "title": "Tipo de problema (1/3)",
            "data": {
                "claim_types": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "claim_type_1",
                            "title": "No llega"
                        },
                        {
                            "id": "claim_type_2",
                            "title": "Diferente"
                        },
                        {
                            "id": "claim_type_3",
                            "title": "Calidad"
                        }
                    ]
                },
                "campaigns": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "campaign_1",
                            "title": "Campaña 1"
                        },
                        {
                            "id": "campaign_2",
                            "title": "Campaña 2"
                        },
                        {
                            "id": "campaign_3",
                            "title": "Campaña 3"
                        }
                    ]
                },
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": [
                        {
                            "id": "category_1",
                            "title": "Unicam"
                        },
                        {
                            "id": "category_2",
                            "title": "Constantes"
                        },
                        {
                            "id": "category_3",
                            "title": "Referidos",
                            "on-unselect-action": {
                                "name": "update_data",
                                "payload": {
                                    "subcategory_visibility": false
                                }
                            },
                            "on-select-action": {
                                "name": "update_data",
                                "payload": {
                                    "subcategories": [
                                        {
                                            "id": "1",
                                            "title": "1 subcategory"
                                        },
                                        {
                                            "id": "2",
                                            "title": "2 subcategory"
                                        }
                                    ],
                                    "subcategory_visibility": true
                                }
                            }
                        }
                    ]
                },
                "subcategories": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": []
                },
                "subcategory_visibility": {
                    "type": "boolean",
                    "__example__": false
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "RadioButtonsGroup",
                        "name": "select_claim_award",
                        "label": "Selecciona una opción:",
                        "required": true,
                        "data-source": "${data.claim_types}"
                    },
                    {
                        "type": "Footer",
                        "label": "Siguiente",
                        "on-click-action": {
                            "name": "navigate",
                            "next": {
                                "type": "screen",
                                "name": "CAMPAIGN_SELECTION"
                            },
                            "payload": {}
                        }
                    }
                ]
            }
        },
        {
            "id": "CAMPAIGN_SELECTION",
            "title": "Tipo campaña (2/3)",
            "data": {},
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "Form",
                        "name": "form",
                        "children": [
                            {
                                "type": "TextSubheading",
                                "text": "Selecciona la campaña: "
                            },
                            {
                                "type": "Dropdown",
                                "label": "Campaña",
                                "required": true,
                                "name": "campaigns",
                                "data-source": "${screen.AWARD_CLAIM.data.campaigns}"
                            },
                            {
                                "type": "TextSubheading",
                                "text": "Deja tus observaciones"
                            },
                            {
                                "type": "TextArea",
                                "label": "Escribe algo aquí",
                                "required": false,
                                "name": "comment"
                            }
                        ]
                    },
                    {
                        "type": "Footer",
                        "label": "Siguiente",
                        "on-click-action": {
                            "name": "navigate",
                            "next": {
                                "type": "screen",
                                "name": "CATEGORY_SELECTION"
                            },
                            "payload": {
                                "subcategory_visibility": "${screen.AWARD_CLAIM.data.subcategory_visibility}"
                            }
                        }
                    }
                ]
            }
        },
        {
            "id": "CATEGORY_SELECTION",
            "title": "Tipo categoría (3/3)",
            "terminal": true,
            "success": true,
            "data": {
                "subcategories": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "title": {
                                "type": "string"
                            }
                        }
                    },
                    "__example__": []
                },
                "subcategory_visibility": {
                    "type": "boolean",
                    "__example__": false
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "RadioButtonsGroup",
                        "name": "category",
                        "label": "Selecciona una categoría:",
                        "required": true,
                        "data-source": "${screen.AWARD_CLAIM.data.categories}"
                    },
                    {
                        "type": "RadioButtonsGroup",
                        "name": "subcategory",
                        "label": "Selecciona una subcategoría:",
                        "required": "${data.subcategory_visibility}",
                        "visible": "${data.subcategory_visibility}",
                        "data-source": "${data.subcategories}"
                    },
                    {
                        "type": "Footer",
                        "label": "Terminar",
                        "on-click-action": {
                            "name": "complete",
                            "payload": {
                                "claim_award": "${screen.AWARD_CLAIM.data.select_claim_award}",
                                "campaign": "${screen.CAMPAIGN_SELECTION.form.campaigns}",
                                "comment": "${screen.CAMPAIGN_SELECTION.form.comment}",
                                "category": "${data.category}",
                                "subcategory": "${data.subcategory}"
                            }
                        }
                    }
                ]
            }
        }
    ]
}
